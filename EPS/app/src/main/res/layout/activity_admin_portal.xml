<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPortal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_txt"
        android:background="@drawable/backgrd"
        android:elevation="0.5dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginRight="100dp"
            android:text="Admin Portal"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="wrap_content"
            android:layout_height="227dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:elevation="0.5dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/layout_reg_emp"
                android:layout_width="184dp"
                android:layout_height="183dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:elevation="0.5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_reg_emp"
                    android:layout_width="184dp"
                    android:layout_height="116dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/registration_icon" />

                <TextView
                    android:id="@+id/txt_reg"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Register Employee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_emp_info"
                android:layout_width="178dp"
                android:layout_height="185dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:elevation="0.5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_emp_info"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6sp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/emp_info" />

                <TextView
                    android:id="@+id/txt_emp_info"
                    android:layout_width="168dp"
                    android:layout_height="55dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Emp Info"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:elevation="0.5dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/layout_salary_slip"
                android:layout_width="181dp"
                android:layout_height="161dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:elevation="0.5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_sal_slip"
                    android:layout_width="130dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1sp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/salary_icon" />

                <TextView
                    android:id="@+id/txt_sal_slip"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Salary Slip"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_admin"
                android:layout_width="178dp"
                android:layout_height="161dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:elevation="0.5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_ad"
                    android:layout_width="175dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4sp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/admin_icon" />

                <TextView
                    android:id="@+id/txt_ad_details"
                    android:layout_width="162dp"
                    android:layout_height="51dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Admin Details"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

