<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeePortal"
    android:background="@drawable/backgrd"
    >

    <LinearLayout
        android:id="@+id/layout_out"
        android:layout_width="322dp"
        android:layout_height="599dp"
        android:layout_marginTop="16dp"
        android:elevation="0.5dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:id="@+id/text_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bangers"
            android:padding="8dp"
            android:text="Employee Portal"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="148dp"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="0.5dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/img_vw_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/employeesss"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="148dp"
                android:layout_height="57dp"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:padding="8dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="171dp"
            android:layout_height="157dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:elevation="0.5dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/img_vw_sal_slip"
                android:layout_width="94dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/salary_icon"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txt_salary_slip"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:padding="8dp"
                android:text="Salary Slip"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>