<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a"
    android:gravity="center">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/emptitle"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangers"
                    android:textColor="@color/white"/>

            <ImageView
                    android:layout_width="300sp"
                    android:layout_height="200sp"
                    android:gravity="center"
                    android:src="@drawable/salary_icon" />

            <TextView
                android:id="@+id/txt_emp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empname"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:textStyle="italic" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank"
                    android:id="@+id/txt_bank_acc"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pan_no"
                    android:id="@+id/txt_pan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empsalary"
                    android:id="@+id/txt_emp_sal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emptax"
                    android:id="@+id/txt_sal_tax"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empnetsal"
                    android:id="@+id/txt_net_sal"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:text="~From EMS" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>